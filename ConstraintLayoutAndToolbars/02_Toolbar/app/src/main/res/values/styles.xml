<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_green_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationButton</item>
        <item name="titleTextColor">@android:color/holo_orange_dark</item>
        <item name="colorControlNormal">#FF0000</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="NavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/holo_orange_dark</item>
    </style>
    

</resources>